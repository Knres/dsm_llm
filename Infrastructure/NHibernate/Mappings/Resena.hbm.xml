<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="ApplicationCore" namespace="ApplicationCore.Domain.EN">
  <class name="Resena" table="Resena">
    <id name="Id" column="Id" type="long">
      <generator class="hilo">
        <param name="table">NHibernateUniqueKey</param>
        <param name="column">NextHigh</param>
        <param name="max_lo">100</param>
      </generator>
    </id>
    <property name="Puntuacion" column="Puntuacion" />
    <property name="Comentario" column="Comentario" />
    <property name="FechaPublicacion" column="FechaPublicacion" />

    <many-to-one name="Usuario" column="Usuario_Id" class="Usuario" not-null="true" />
    <many-to-one name="Pelicula" column="Pelicula_Id" class="Pelicula" not-null="true" />

    <one-to-one name="Reporte" class="Reporte" property-ref="Resena" cascade="all" />
  </class>
</hibernate-mapping>
