<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
  <class name="ApplicationCore.Domain.EN.Usuario, ApplicationCore" table="Usuario">
    <id name="Id" column="Id" type="long">
      <generator class="hilo">
        <param name="table">NHibernateUniqueKey</param>
        <param name="column">NextHigh</param>
        <param name="max_lo">100</param>
      </generator>
    </id>
    <property name="Nombre" />
    <property name="Email" />
    <property name="Contrasena" />
    <property name="FotoPerfil" />
    <property name="Biografia" />
    <property name="ModoBlancoYNegro" />

    <bag name="ReseÃ±as" inverse="true" cascade="all-delete-orphan" lazy="true">
      <key column="AutorId" />
      <one-to-many class="ApplicationCore.Domain.EN.Resena, ApplicationCore" />
    </bag>

    <bag name="Listas" inverse="true" cascade="all-delete-orphan" lazy="true">
      <key column="CreadorId" />
      <one-to-many class="ApplicationCore.Domain.EN.Lista, ApplicationCore" />
    </bag>

    <bag name="Notificaciones" inverse="true" cascade="all-delete-orphan" lazy="true">
      <key column="DestinatarioId" />
      <one-to-many class="ApplicationCore.Domain.EN.Notificacion, ApplicationCore" />
    </bag>

    <bag name="Reportes" inverse="true" cascade="all-delete-orphan" lazy="true">
      <key column="AutorId" />
      <one-to-many class="ApplicationCore.Domain.EN.Reporte, ApplicationCore" />
    </bag>
  </class>
</hibernate-mapping>
