<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
  <class name="ApplicationCore.Domain.EN.Metrica, ApplicationCore" table="Metrica">
    <id name="Id" column="Id" type="long">
      <generator class="hilo">
        <param name="table">NHibernateUniqueKey</param>
        <param name="column">NextHigh</param>
        <param name="max_lo">100</param>
      </generator>
    </id>
    <property name="ValoracionMedia" type="double" not-null="true" />
    <property name="NumeroResenas" type="int" not-null="true" />
    <property name="AparicionesEnListas" type="int" not-null="true" />
    <property name="Popularidad" type="double" not-null="true" />
    <property name="Fecha" type="DateTime" not-null="true" />

    <many-to-one name="Pelicula" class="ApplicationCore.Domain.EN.Pelicula, ApplicationCore" column="PeliculaId" />
  </class>
</hibernate-mapping>
